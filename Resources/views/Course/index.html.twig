{% extends 'SmirikCourseBundle::layout.html.twig' %}

{% block title %}{{ 'Courses'|trans }} {{ 'available'|trans }}{% endblock %}

{% block header %}
    {{ 'Courses'|trans }} <small>{{ 'available'|trans }}</small>
{% endblock %}

{% block breadcrumbs %}
    {% include "SmirikCoreBundle:Menu:breadcrumbs.html.twig" with {
        items: [
            {},
            {label: "Мой кабинет", uri: path("account_my")},
            {label: "Мои курсы", uri: "#"},
        ]}
    %}
{% endblock %}

{% block content %}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-success">{{ flashMessage|trans }}</div><br>
    {% endfor %}

    <ul id="portfolio-filter" class="nav nav-tabs">
        <li class="active">
            <a href="#my-courses" data-toggle="pill">{{ 'My courses'|trans }} ({{ my_courses|length }})</a>
        </li>
        <li>
            <a href="#available-courses" data-toggle="pill">{{ 'Available courses'|trans }} ({{ available_courses|length }})</a></li>
    </ul><br>

    <div class="pill-content">
        <div id="my-courses" class="pill-pane active">
            {% include "SmirikCourseBundle:Course/List:_courses.html.twig" with { 'courses': my_courses } %}
        </div>

        <div id="available-courses" class="pill-pane">
            {% include "SmirikCourseBundle:Course/List:_courses.html.twig" with { 'courses': available_courses } %}
        </div>
    </div>

{% endblock %}
