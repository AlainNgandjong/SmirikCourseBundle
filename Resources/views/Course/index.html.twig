{% extends 'SmirikCourseBundle::layout.html.twig' %}

{% block title %}{{ 'Courses'|trans }} {{ 'available'|trans }}{% endblock %}

{% block header %}
<h1>{{ 'Courses'|trans }} <small>{{ 'available'|trans }}</small></h1>
{% endblock %}

{% block content %}
{% if my_courses|length > 0 %}
    <h3>{{ 'My courses'|trans }}</h3>
    <div class="accordion" id="accordion1">
    {% for course in my_courses %}
        {% for item in course.usercourses %}
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion1" href="#my_courses_{{ course.id }}">
                    {{ course.title }}
                    </a>
                </div>
                <div id="my_courses_{{ course.id }}" class="accordion-body collapse">
                    <div class="accordion-inner">
                        {{ course.description|raw }}
                        {% if not item.isPassed %}
                        <p>
                            <strong>Дата начала</strong>: {{ item.startedAt('Y-m-d H:i') }}
                        </p>
                        {% endif %}
                        
                        {% if not item.isPassed %}<a href="{{ path('course_show', { "id": course.id }) }}" class="btn">{{ 'Continue'|trans }}</a>{% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
    </div>
{% endif %}
 
{% if avaliable_courses|length > 0 %}
  <h3>{{ 'Available courses'|trans }}</h3>
  <div class="accordion" id="accordion2">
  {% for course in avaliable_courses %}
      <div class="accordion-group">
          <div class="accordion-heading">
              <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#my_courses_{{ course.id }}">
              {{ course.title }}
              </a>
          </div>
          <div id="my_courses_{{ course.id }}" class="accordion-body collapse">
              <div class="accordion-inner">
                  <p>
                  {{ course.description|raw }}
                  </p>
                  <a href="{{ path('course_show', { "id": course.id }) }}" class="btn">{{ 'Start'|trans }}</a>
              </div>
          </div>
      </div>
  {% endfor %}
  </div>
{% endif %}

  
{% endblock %}