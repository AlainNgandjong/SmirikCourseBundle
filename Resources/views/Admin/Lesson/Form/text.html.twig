<div class="form-content-text">
    <div class="accordion-group" id="text-{{ loop.index }}">
        <div class="accordion-heading">
            <div class="pull-right remove">
                <a class="btn btn-small btn-danger delete" href="#"><i class="icon-remove"></i> {{ 'Delete'|trans }}</a>
            </div>
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion-texts" href="#collapse-text-{{ loop.index }}">
                <strong>{{ content.title.vars.value }}</strong>
            </a>
        </div>
        <div id="collapse-text-{{ loop.index }}" class="accordion-body collapse">
            <div class="accordion-inner">
                {{ form_row(content.title) }}
                {{ form_row(content.description) }}
                {{ form_row(content.text) }}
                {{ form_rest(content) }}
            </div>
        </div>
    </div>
</div>