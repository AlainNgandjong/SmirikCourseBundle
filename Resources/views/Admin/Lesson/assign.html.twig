{% extends 'SmirikAdminBundle::layout.html.twig' %}

{% block title %}{{ 'Assign quiz to lesson'|trans }}{% endblock %}

{% block header %}
<h1>{{ 'Assign quiz'|trans }} <small>{{ 'to lesson'|trans }}</small></h1>
{% endblock %}

{% block content %}
  <div id="alerts">
  </div>

  <div class="alert alert-success" id="alert_template" style="display: none;">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <strong>{{ 'Success'|trans }}!</strong> {{ 'Quiz was assigned to the lesson'|trans }}
  </div>
  
  <div id="content">
  </div>
  
  <script language="JavaScript">
    page         = '1';
    route        = 'admin_lessons_assign';
    sort         = 'id';
    sort_type    = 'desc';
    filter       = '';
    
    success_text = "<strong>{{ 'Success'|trans }}!</strong> {{ 'Quiz was assigned to the lesson'|trans }}";

    $.get("{{ path('admin_quiz_index') }}", function(data) {
      $('#content').html(data);
      checkbox_mass_action('{{ lq_ids|raw }}');
    });
  </script>
  
  <a href="#" onclick="assign_mass_action('{{ route }}', 'Success', false)" class="btn">{{ 'Assign'|trans }}</a>
  
{% endblock %}