{% set value = attribute(item, column.getter) %}
{% if value == 0 %}
    <span class="label">{{ 'In Progress'|trans }}</span>
{% elseif value == 1 %}
    <span class="label label-important">{{ 'Pending'|trans }}</span>
{% elseif value == 2 %}
    <span class="label label-success">{{ 'Accepted'|trans }}</span>
{% elseif value == -1 %}
    <span class="label">{{ 'Rejected'|trans }}</span>
{% elseif value == 3 %}
    <span class="label label-info">{{ 'Failed'|trans }}</span>
{% else %}
    <span class="label">{{ 'Unknown'|trans }}</span>
{% endif %}
